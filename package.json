{
  "name": "leveldown-hyper",
  "version": "2.0.0",
  "description": "A Node.js LevelDB binding, primary backend for LevelUP (HyperDex fork)",
  "license": "MIT",
  "main": "leveldown-hyper.js",
  "scripts": {
    "install": "prebuild-install || node-gyp rebuild",
    "test": "standard && hallmark && nyc tape test/*-test.js && prebuild-ci",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "rebuild": "node-gyp rebuild",
    "prebuild": "prebuild --all --verbose --strip",
    "hallmark": "hallmark --fix",
    "dependency-check": "dependency-check . test/*.js bench/*.js",
    "prepublishOnly": "npm run dependency-check"
  },
  "dependencies": {
    "abstract-leveldown": "~5.0.0",
    "bindings": "~1.3.0",
    "fast-future": "~1.0.0",
    "nan": "^2.6.2",
    "prebuild-install": "^5.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "dependency-check": "^3.3.0",
    "du": "~0.1.0",
    "faucet": "0.0.1",
    "hallmark": "^0.1.0",
    "iota-array": "~1.0.0",
    "level-community": "^3.0.0",
    "lexicographic-integer": "~1.1.0",
    "mkfiletree": "~1.0.1",
    "monotonic-timestamp": "~0.0.8",
    "node-uuid": "~1.4.3",
    "nyc": "^12.0.2",
    "optimist": "~0.6.1",
    "prebuild": "^8.0.0",
    "prebuild-ci": "^2.2.3",
    "readfiletree": "~0.0.1",
    "rimraf": "~2.6.1",
    "slump": "~3.0.0",
    "standard": "^12.0.0",
    "tape": "~4.9.0"
  },
  "hallmark": {
    "community": "level-community"
  },
  "gypfile": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/level/leveldown-hyper.git"
  },
  "homepage": "https://github.com/level/leveldown-hyper",
  "keywords": [
    "leveldb",
    "level"
  ],
  "engines": {
    "node": ">=6"
  }
}
